# debian/watch
# Debian UScan configuration for this package.
# Manual page: ‘uscan(1)’.

# Version of the UScan configuration format for this file.
version = 4

# Public releases at Python Package Index.
opts = "uversionmangle=s/(\d)-?((?:rc|a|b|c)\d*)$/$1~$2/" \
    https://pypi.debian.net/@PACKAGE@/ \
    @PACKAGE@-@ANY_VERSION@@ARCHIVE_EXT@ \
    debian uupdate


